{
    "num_gpus": 1,
    "batch_size": 4,
    "learning_rate": 0.0005,
    "adam_b1": 0.8,
    "adam_b2": 0.99,
    "lr_decay": 0.99,
    "seed": 1234,

    "dense_channel": 64,
    "compress_factor": 0.3,
    "num_tsconformers": 4,
    "beta": 2.0,

    "sampling_rate": 16000,
    "segment_size": 32000,
    "n_fft": 400,
    "hop_size": 100,
    "win_size": 400,

    "num_workers": 4,
    
    "use_waveform": true,


    // --generator_type     : "baseline" | "mingru"
    // --discriminator_type : "single"   | "multi_scale"
    // --use_ssl_loss       : flag to enable SSL loss
    // --ssl_model_name     : NeMo SSL model name
    // --ssl_loss_weight    : weight for SSL loss
  

    "generator_type": "baseline",
    "discriminator_type": "single",

    "use_ssl_loss": false,
    "ssl_model_name": "nvidia/ssl_en_nest_xlarge_v1.0",
    "ssl_loss_weight": 0.1,

    // for multi_scale discriminator
    "discriminator_resolutions": [[400, 100, 400], [1024, 120, 600], [256, 50, 120]],

    "loss_weights": {
        "mag": 0.9,
        "pha": 0.3,
        "com": 0.1,
        "stft": 0.1,
        "metric": 0.05,
        "time": 0.2
    },

    "dist_config": {
        "dist_backend": "nccl",
        "dist_url": "tcp://localhost:13245",
        "world_size": 1
    }
}
